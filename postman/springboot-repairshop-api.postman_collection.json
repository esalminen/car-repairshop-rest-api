	"item": [
		{
			"name": "Post a customer",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"const customerCount = parseInt(pm.collectionVariables.get(\"customerCount\"));\r",
							"let currentCount = parseInt(pm.collectionVariables.get(\"currentCount\"))\r",
							"\r",
							"if (currentCount < customerCount){\r",
							"    currentCount = currentCount + 1;\r",
							"    postman.setNextRequest(\"Post a customer\");\r",
							"} else {\r",
							"    postman.setNextRequest(\"Get all customers\");\r",
							"}\r",
							"\r",
							"pm.collectionVariables.set(\"currentCount\", currentCount);"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"protocolProfileBehavior": {
				"strictSSL": false,
				"followRedirects": false
			},
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{   \r\n    \"firstName\":\"{{$randomFirstName}}\",\r\n    \"lastName\":\"{{$randomLastName}}\",\r\n    \"email\":\"{{$randomEmail}}\",\r\n    \"phone\":\"{{$randomPhoneNumber}}\",\r\n    \"address\":\"{{$randomStreetAddress}}\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/customers",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"customers"
					]
				}
			},
			"response": []
		},
		{
